---
import Link from "../components/Link.astro";

interface Props {
	pageTitle: string;
	description: string;
	siteName: string;
}

const { pageTitle, description, siteName} = Astro.props;

// Format display name
let displayName;
if (Astro.url.pathname == "/") {
	displayName = siteName
} else {
	displayName = pageTitle + " + " + siteName
}

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content={pageTitle}/>
		<meta property="og:site_name" content={siteName}/>
		<meta property="og:locale" content="en_US"/>
		<title>{displayName}</title>
		<link href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
	</head>
	<body>
		<slot />
		<footer>
			<Link href="https://oliveratkinson.net">Personal Website</Link>
			<Link href="https://github.com/Rushmore75">Github</Link>
			<Link href="https://git.oliveratkinson.net/explore/repos">Gitea</Link>
			<Link href="https://offbrand.gg">Offbrand (insperation)</Link>
			<Link href="https://astro.build">Astro</Link>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent-light: 63, 162, 255;
		--accent-dark: 0, 86, 152;
		--alt-accent: 205, 75, 55;
		--alt-bg: 220, 95, 75;
		--bg-light: 228, 225, 229;
		font-size: medium;
	}
	html {
		font-family: system-ui, sans-serif;
		/* font-family: "Dela Gothic One", sans-serif; */
		background: rgb(var(--bg-light));
	}
	body {
		margin: 0;
	}
	.title {
		font-family: "Dela Gothic One", sans-serif;
	}
	@media screen and (max-width: 600px) {
		:root {
			font-size: small;
		}
	}
</style>
<style>
    footer {
        background-color: rgb(var(--accent-light));
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: space-around;
		padding: 2rem;
    }
	a {
		color: black;
		text-decoration: none;
	}
	a:visited {
		color: black;
	}
	a:hover {}
	a:focus-visible {
		outline: none;
	}
</style>
