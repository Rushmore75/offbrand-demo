---
interface Props {
    pxWide: number;
}
const { pxWide } = Astro.props;
let multiplyer = (pxWide).toString()+"px";

let adjustment = 1.2; // default to 1.0
// constant found from origional "stroke width * px" which looked nice
let strokeMultiplyer = 9.8928 * 240 * adjustment;
let stroke = strokeMultiplyer / pxWide;
---
<style define:vars={{multiplyer}}>
    svg {
        width: var(--multiplyer);
        height: auto;
        display: inline;
        position: absolute;
        top: 67%;
        left: 0;
        transform: scale(-1,1); /* flip vertically */
    }
</style>
