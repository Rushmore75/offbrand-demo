---
interface Props {
    scale: number;
}
const { scale } = Astro.props;
let multiplyer = (scale * 100).toString()+"%";
---

<style define:vars={{multiplyer}}>
    svg {
        width: var(--multiplyer);
        height: auto;

        display: inline;
        position: absolute;
        right: 15vw;

        animation: wobble 2s;
        animation-direction: alternate;
        animation-iteration-count: infinite;
        animation-timing-function: cubic-bezier(0.5, 0, 0.5, 1)
    }
    @keyframes wobble {
        0% {
            transform: rotate(5deg);
        }
        100% {
            transform: rotate(-5deg);
        }
        
    }
</style>
